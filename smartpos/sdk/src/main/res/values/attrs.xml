<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TagCloudView">
        <attr name="tcvBackground" format="reference" />
        <attr name="tcvTextColor" format="color" />
        <attr name="tcvBorder" format="dimension" />
        <attr name="tcvTextSize" format="integer" />
        <attr name="tcvBorderItem" format="dimension" />
        <attr name="tcvItemBorderVertical" format="dimension" />
        <attr name="tcvItemBorderHorizontal" format="dimension" />

        <attr name="tcvSingleLine" format="boolean" />
        <attr name="tcvShowEndText" format="boolean" />
        <attr name="tcvShowRightImg" format="boolean" />
        <attr name="tcvEndText" format="string" />
        <attr name="tcvRightResId" format="reference" />
        <attr name="tcvCanTagClick" format="boolean" />

        <attr name="tcvTagResId" format="reference" />
    </declare-styleable>
    <!-- Specifies theme to apply to the toolbar -->
    <attr name="nnf_toolbarTheme" format="reference" />
    <!-- Color to apply to separator for OK/Cancel buttons -->
    <attr name="nnf_separator_color" format="color" />
    <!-- Color to apply to the directory icons in list -->
    <attr name="nnf_dir_icon_color" format="color" />


    <declare-styleable name="EasyVideoPlayer">

        <attr name="evp_source" format="string" />

        <attr name="evp_leftAction" format="enum">
            <enum name="none" value="0" />
            <enum name="restart" value="1" />
            <enum name="retry" value="2" />
        </attr>

        <attr name="evp_rightAction" format="enum">
            <enum name="none" value="3" />
            <enum name="submit" value="4" />
            <enum name="customLabel" value="5" />
        </attr>

        <attr name="evp_customLabelText" format="string" />
        <attr name="evp_retryText" format="string" />
        <attr name="evp_submitText" format="string" />
        <attr name="evp_bottomText" format="string" />

        <attr name="evp_restartDrawable" format="reference" />
        <attr name="evp_playDrawable" format="reference" />
        <attr name="evp_pauseDrawable" format="reference" />

        <attr name="evp_hideControlsOnPlay" format="boolean" />
        <attr name="evp_autoPlay" format="boolean" />

        <attr name="evp_disableControls" format="boolean" />

        <attr name="evp_themeColor" format="color" />

    </declare-styleable>
</resources>