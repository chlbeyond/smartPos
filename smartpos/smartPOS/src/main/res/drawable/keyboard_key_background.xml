<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <solid android:color="@color/keyboard_key_press_color" />
            <corners android:radius="4dip" />
        </shape>

    </item>
    <item android:bottom="5px" android:drawable="@drawable/keyboard_shadow">
        <shape>
            <solid android:color="@color/keyboard_key_background" />
            <corners android:radius="4dip" />
        </shape>
    </item>
</selector> 
