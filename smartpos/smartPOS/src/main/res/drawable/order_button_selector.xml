<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/Blue" />
            <padding android:left="5dp" android:top="2dp" android:right="5dp" android:bottom="2dp" />
            <!-- corners android:radius="5dp" /-->
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="270" android:startColor="#1a557c" android:endColor="#62c4e9" />
            <solid android:color="@color/Gray" />
            <padding android:left="5dp" android:top="2dp" android:right="5dp" android:bottom="2dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FF6699" />
            <padding android:left="5dp" android:top="2dp" android:right="5dp" android:bottom="2dp" />
            <corners android:radius="5dp" />

        </shape>
    </item>
</selector> 
