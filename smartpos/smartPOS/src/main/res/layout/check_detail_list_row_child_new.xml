<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutOrderListRowIngredient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewOrderListDishName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="7"
                android:gravity="left"
                android:paddingLeft="3dp"
                android:text="@string/order_name"
                android:textColor="@color/cook_method_text_color"
                android:textSize="@dimen/app_info_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/order_price"
                android:textColor="@color/check_price_color"
                android:textSize="@dimen/app_info_text_size" />

            <TextView
                android:id="@+id/textViewRealPrice"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/order_price"
                android:textColor="@color/check_price_color"
                android:textSize="@dimen/app_info_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewOrderListQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/cook_method_text_color"
            android:textSize="@dimen/app_info_text_size" />

        <TextView
            android:id="@+id/blank_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:text="   "
            android:textColor="@color/cook_method_text_color"
            android:textSize="@dimen/app_info_text_size" />
    </LinearLayout>
</LinearLayout>