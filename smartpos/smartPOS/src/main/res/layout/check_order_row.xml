<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutCheckOrderRowContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/linearLayoutOrderListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/textViewCheckOrdeRowNo"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="@string/order_number" />

        <TextView
            android:id="@+id/textViewCheckOrderDishName"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="left"
            android:text="@string/order_name" />

        <TextView
            android:id="@+id/textViewCheckOrderQuantity"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=" 0.8"
            android:gravity="right"
            android:text="@string/order_quantity" />

        <TextView
            android:id="@+id/textViewCheckOrderPrice"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="right"
            android:text="@string/order_price" />

        <TextView
            android:id="@+id/textViewCheckOrderNetPrice"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="@string/order_net_amount" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/arrows" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCheckOrderIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>