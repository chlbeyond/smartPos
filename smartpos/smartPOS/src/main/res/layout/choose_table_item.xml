<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/merge_open_table_item_width"
    android:layout_height="@dimen/merge_open_table_item_height">

    <ImageView
        android:id="@+id/imageViewLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/table_status_item_detail"
        android:layout_marginTop="@dimen/table_status_item_detail"
        android:src="@drawable/new_locked" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/White"
            android:maxLines="1"
            android:textSize="@dimen/table_status_bottom_text" />

        <TextView
            android:id="@+id/tablePersonCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/app_info_text_size"
            android:textColor="@color/White" />
    </LinearLayout>

</RelativeLayout>