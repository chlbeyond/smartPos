<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_fastmode_title"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取餐号:" />

            <TextView
                android:id="@+id/textView_fastmode_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="xxxxxx"
                android:textColor="@color/Black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="开台人:" />

            <TextView
                android:id="@+id/textView_fastmode_staff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:text="林的风"
                android:textColor="@color/Black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间:" />

            <TextView
                android:id="@+id/textView_fastmode_time"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:text="10:26"
                android:textColor="@color/Black" />
        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/listView_fastmode_fetch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30px"
        android:layout_marginTop="80px"></ListView>

    <TextView
        android:id="@+id/textView_fastmode_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center" />
</android.support.v7.widget.CardView>