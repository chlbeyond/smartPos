<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textView_fastmode_sn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="订单号"
        android:textSize="@dimen/table_status_fragment_text" />

    <TextView
        android:id="@+id/textView_fastmode_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="取餐号"
        android:textSize="@dimen/table_status_fragment_text" />

    <TextView
        android:id="@+id/textView_fastmode_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="金额"
        android:textSize="@dimen/table_status_fragment_text" />


    <TextView
        android:id="@+id/textView_fastmode_staff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="服务员"
        android:textSize="@dimen/table_status_fragment_text" />


    <TextView
        android:id="@+id/textView_fastmode_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="时间"
        android:textSize="@dimen/table_status_fragment_text" />

</LinearLayout>