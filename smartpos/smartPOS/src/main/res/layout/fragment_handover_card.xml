<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ivory">

    <LinearLayout
        android:id="@+id/linearLayout_handover_info"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_cardView_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/abc_text_size_title_material_toolbar"
            android:text="林的风"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView_cardView_handoverTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2016-01-05"
            android:textColor="#000" />

        <Button
            android:id="@+id/button_cardView_handover_print"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:text="打印" />
    </LinearLayout>


    <ExpandableListView

        android:id="@+id/listView_cardView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="100px"></ExpandableListView>
</android.support.v7.widget.CardView>