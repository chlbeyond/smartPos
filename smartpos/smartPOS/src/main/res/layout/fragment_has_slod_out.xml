<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <GridView
        android:id="@+id/has_slod_out_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnWidth="@dimen/table_status_fragment_item_columnWidth"
        android:horizontalSpacing="@dimen/order_fragment_gridview_horizontalSpacing"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/order_fragment_gridview_verticalSpacing"></GridView>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/table_status_fragment_text"
        android:text="无沽清菜品" />

</RelativeLayout>
