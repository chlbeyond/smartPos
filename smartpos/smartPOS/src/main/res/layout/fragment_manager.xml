<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/button_fragment_manager_bill_query"
                style="@style/manage_btn_linearlayout_style"
                android:background="#fe7f54">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/bill_query" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/bill_query" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_reserve_manage"
                style="@style/manage_btn_linearlayout_style"
                android:background="#ff6565"
                android:visibility="gone">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/reserve_manage" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/reserve_manage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_handover"
                style="@style/manage_btn_linearlayout_style"
                android:background="#01c0c8">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/business_succession" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/business_succession" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_dailystat"
                style="@style/manage_btn_linearlayout_style"
                android:background="#51b8f2">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/business_daily" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/business_daily" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/button_fragment_manager_buy_manage"
                style="@style/manage_btn_linearlayout_style"
                android:background="#fe7f54"
                android:visibility="gone">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/buy_manage" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/buy_manage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_device_check"
                style="@style/manage_btn_linearlayout_style"
                android:background="#01c0c8"
                android:visibility="gone">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/device_check" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/device_check" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/button_fragment_manager_cash_box"
                style="@style/manage_btn_linearlayout_style"
                android:background="#ff6565">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/open_money_box" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/open_money_box" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_store_manage"
                style="@style/manage_btn_linearlayout_style"
                android:background="#01c0c8"
                android:visibility="gone">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/store_manage" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/store_manage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_change_password"
                style="@style/manage_btn_linearlayout_style"
                android:background="#51b8f2">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/update_password" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/update_password" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_about"
                style="@style/manage_btn_linearlayout_style"
                android:background="#ff6565">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/about_sanyipos" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/local_setting" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/button_fragment_manager_slod_out_manage"
                style="@style/manage_btn_linearlayout_style"
                android:background="#01c0c8">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/slod_out_manage" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/slod_out_manage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_print_slodout_list"
                style="@style/manage_btn_linearlayout_style"
                android:background="#fe7f54">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/print_slodout_list" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/print_slodout_list" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_fragment_manager_reprint_daily_detail"
                style="@style/manage_btn_linearlayout_style"
                android:background="#ff6565">

                <ImageView
                    style="@style/manage_btn_image_style"
                    android:src="@drawable/reprint_daily_detail" />

                <TextView
                    style="@style/manage_btn_text_style"
                    android:text="@string/reprint_daily_detail" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>