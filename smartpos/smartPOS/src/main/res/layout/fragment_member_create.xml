<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/card_info_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/op_dialog_button_layout_bg"
                    android:gravity="center"
                    android:padding="20dp"
                    android:textColor="@color/Black"
                    android:text="@string/member_create_card_info"
                    android:textSize="@dimen/dialog_title_text_size" />

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/member_card_number" />

                    <EditText
                        android:id="@+id/editText_member_create_fragment_number"
                        style="@style/member_recharge_each_edit"
                        android:hint="@string/not_null"
                        android:textColorHint="@color/Red" />
                </LinearLayout>

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/member_name" />

                    <EditText
                        android:id="@+id/editText_member_create_fragment_name"
                        style="@style/member_recharge_each_edit"
                        android:hint="@string/not_null"
                        android:textColorHint="@color/Red" />
                </LinearLayout>

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/member_mobile" />

                    <TextView
                        android:id="@+id/editText_member_create_fragment_mobilephone"
                        style="@style/member_recharge_each_edit"
                        android:drawableRight="@drawable/keybord"
                        android:hint="@string/not_null"
                        android:textColorHint="@color/Red" />
                </LinearLayout>

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/sale" />

                    <TextView
                        android:id="@+id/editText_member_create_fragment_sale"
                        style="@style/member_recharge_each_edit"
                        android:drawableRight="@drawable/arrows" />
                </LinearLayout>

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/member_type" />

                    <TextView
                        android:id="@+id/editText_member_create_fragment_category"
                        style="@style/member_recharge_each_edit"
                        android:drawableRight="@drawable/arrows" />
                </LinearLayout>


                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/member_card_rfid" />

                    <EditText
                        android:id="@+id/editText_member_create_fragment_RID"
                        style="@style/member_recharge_each_edit"
                        android:hint="请点击此框后刷卡" />
                </LinearLayout>


                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/pay_pwd" />

                    <EditText
                        android:id="@+id/editText_member_create_fragment_pay_pwd"
                        style="@style/member_recharge_each_edit"
                        android:inputType="numberPassword"
                        android:maxLength="8" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_info_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/op_dialog_button_layout_bg"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="@string/member_create_member_info"
                    android:textSize="@dimen/dialog_title_text_size" />

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/birthday" />

                    <TextView
                        android:id="@+id/editText_member_create_fragment_birthday"
                        style="@style/member_recharge_each_edit"
                        android:hint="请输入出生年月" />
                </LinearLayout>

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/sex" />

                    <TextView
                        android:id="@+id/editText_member_create_fragment_sex"
                        style="@style/member_recharge_each_edit"
                        android:drawableRight="@drawable/arrows" />
                </LinearLayout>

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/documents_type" />

                    <TextView
                        android:id="@+id/editText_member_create_fragment_ID_type"
                        style="@style/member_recharge_each_edit"
                        android:drawableRight="@drawable/arrows" />
                </LinearLayout>

                <LinearLayout style="@style/member_create_each_style">

                    <TextView
                        style="@style/member_recharge_each_hint"
                        android:text="@string/documents_number" />

                    <EditText
                        android:id="@+id/editText_member_create_fragment_ID_number"
                        style="@style/member_recharge_each_edit"
                        android:hint="请输入证件号码" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/op_dialog_button_layout_bg"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button_member_create_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/cancel_save_button_selector"
                    android:paddingLeft="100dp"
                    android:textColor="@color/Black"
                    android:paddingRight="100dp"
                    android:text="@string/cancel_save" />

                <Button
                    android:id="@+id/button_member_create_save_and_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp"
                    android:text="@string/save_and_create"
                    android:textColor="@color/White" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>