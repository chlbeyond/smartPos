<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_order_fragment_cookmethod"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Blue"
        android:textSize="@dimen/fragment_order_item_option_title" />

    <TableRow
        android:id="@+id/tableRow105"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/DarkGray"></TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1">

        <TextView
            android:id="@+id/TextView_order_fragment_dish_private_cookmethed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/private_cookmethed"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/fragment_order_item_option_title" />

        <TableRow
            android:id="@+id/tableRow_middle"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/DarkGray"></TableRow>

        <TextView
            android:id="@+id/TextView_order_fragment_dish_cookmethed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/all_method"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/fragment_order_item_option_title" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:visibility="invisible" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/order_fragment_cookmethed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonContinueOrder"
            style="@style/order_fragment_button"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_bg_no_stroke"
            android:textColor="@color/Black"
            android:text="@string/back" />

        <Button
            android:id="@+id/buttonOrderItemOptionConfirm"
            style="@style/order_fragment_button"
            android:layout_marginLeft="5dp"
            android:background="@drawable/table_report_button_no_stroke_selector"
            android:text="@string/sure" />
    </LinearLayout>

</LinearLayout>