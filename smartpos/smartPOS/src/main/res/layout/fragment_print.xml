<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/button_fragment_manager_reprint_daily_detail"
            style="@style/manage_btn_linearlayout_style"
            android:background="#ff6565">

            <ImageView
                style="@style/manage_btn_image_style"
                android:src="@drawable/reprint_daily_detail" />

            <TextView
                style="@style/manage_btn_text_style"
                android:text="@string/reprint_daily_detail" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>