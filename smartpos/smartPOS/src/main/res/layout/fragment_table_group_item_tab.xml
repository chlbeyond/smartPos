<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableGroupTab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tableGroupTabMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="@color/tablestutstabsel"
            android:textSize="@dimen/tab_view_text_size_sp" />

        <TextView
            android:id="@+id/textViewTableMergeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tablestatustabnorbac"
            android:gravity="center_horizontal"
            android:text="1"
            android:textColor="@color/White"
            android:textSize="@dimen/tab_view_text_size_sp" />
    </LinearLayout>

</LinearLayout>