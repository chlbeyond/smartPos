<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LineraLayout_shop_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_inputpassword_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/shop_close" />

        <Button
            android:id="@+id/button_inputpassword_shop_close_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shop_start"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/begin_business"
            android:textColor="#fff"
            android:textSize="@dimen/login_activity_reminder" />


    </LinearLayout>

</LinearLayout>