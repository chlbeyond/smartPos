<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textView_member_charge_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="姓名"
        android:textColor="#000"
        android:textSize="@dimen/table_status_fragment_text" />

    <TextView
        android:id="@+id/textView_member_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="手机号"
        android:textColor="#000"
        android:textSize="@dimen/table_status_fragment_text" />

    <TextView
        android:id="@+id/textView_member_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:gravity="center"
        android:text="会员卡号"
        android:textColor="#000"
        android:textSize="@dimen/table_status_fragment_text" />

    <TextView
        android:id="@+id/textView_member_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:gravity="center"
        android:text="会员类型"
        android:textColor="#000"
        android:textSize="@dimen/table_status_fragment_text" />

    <TextView
        android:id="@+id/textView_member_charge_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"

        android:gravity="center"
        android:text="充值金额"
        android:textColor="#000"
        android:textSize="@dimen/table_status_fragment_text" />

    <TextView
        android:id="@+id/textView_member_charge_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:gravity="center"
        android:text="状态"
        android:textColor="#000"
        android:textSize="@dimen/table_status_fragment_text" />

    <Button
        android:id="@+id/button_member_charge_undo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/button_selector"
        android:text="撤销"
        android:textColor="#fff"
        android:visibility="invisible" />
</LinearLayout>