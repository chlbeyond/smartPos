<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutOrderListRowContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/linearLayoutOrderListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutOrderListRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewOrderListRowNo"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight=".6"
            android:gravity="center"
            android:text="@string/order_number"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.9">

            <ImageView
                android:id="@+id/imageViewOrderPlaced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/order_placed"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewOrderListDishName"
                style="@style/OrderBottomLeftFontList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="left"
                android:paddingLeft="3dp"
                android:text="@string/order_name" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewOrderListPrice"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1.3"
            android:gravity="right"
            android:text="@string/order_price"
            android:textColor="@color/Red" />

        <TextView
            android:id="@+id/textViewOrderListQuantity"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/order_quantity" />

        <TextView
            android:id="@+id/textViewOrderListVoid"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/order_void" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutOrderListWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutOrderListRemark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutOrderListIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>