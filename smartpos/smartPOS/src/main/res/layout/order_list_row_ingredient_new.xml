<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutOrderListRowIngredient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOrderListDishName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text="@string/order_name"
            android:textSize="@dimen/app_info_text_size"
            android:textColor="@color/cook_method_text_color"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewOrderListPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="2"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/app_info_text_size"
            android:textColor="@color/cook_method_text_color"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewOrderListQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/app_info_text_size"
            android:textColor="@color/cook_method_text_color"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>