<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutOrderListRowIngredient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <FrameLayout
        android:id="@+id/framelayoutOrderNumberColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/imageViewOrderPlaced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/order_placed"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewOrderListRowNo"
            style="@style/OrderBottomLeftFontList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </FrameLayout>

    <TextView
        android:id="@+id/textViewOrderListDishName"
        style="@style/OrderBottomLeftFontList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="5.5"
        android:gravity="left"
        android:paddingLeft="3dp"
        android:text="@string/order_name"
        android:textColor="@color/Red" />

</LinearLayout>
