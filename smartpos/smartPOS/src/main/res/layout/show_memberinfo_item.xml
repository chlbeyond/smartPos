<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/is_public_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_stroke_white"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/is_public_checkbox_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frame_box" />

            <ImageView
                android:id="@+id/is_public_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_box"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/is_public_checkbox_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/member_sn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/voucher_service_title" />

            <TextView
                android:id="@+id/member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/voucher_service_title" />

            <TextView
                android:id="@+id/member_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/voucher_service_title" />

            <TextView
                android:id="@+id/member_moblie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/voucher_service_title" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>