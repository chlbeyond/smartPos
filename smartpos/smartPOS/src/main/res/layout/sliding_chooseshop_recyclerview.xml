<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_sliding_choose_shop_recycler_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="彩虹云宝"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/imageView_sliding_choose_shop_recycler_brand_logo"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.rainbow.common.view.MyGridView
        android:id="@+id/gridView_sliding_choose_shop_recycler_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/order_fragment_gridview_horizontalSpacing"
        android:numColumns="3"
        android:verticalSpacing="@dimen/order_fragment_gridview_verticalSpacing"></com.rainbow.common.view.MyGridView>
</LinearLayout>